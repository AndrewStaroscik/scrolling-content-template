

#mainFrame
  display flex
  position relative
  border dashed 2px #232323
  height 2500px
  overflow hidden

#scrollDiv
  position fixed
  text-align center
  right 10px
  top 1000px
  max-width 80px
  height 22px
  padding 5px 10px
  border 2px solid #565656
  border-radius 8px
  background #efefef
  visibility hidden
  cursor pointer
  
#illustration-wrapper 
  position absolute
  z-index 20

#fade-div-parent
  position absolute
  left 0px
  top 0px
  width 100%
  z-index 10
  
#fade-div-top 
  background #fff
  height 200px
  width 100%
  
#fade-div-fade
  background linear-gradient(rgba(255,255,255,1), rgba(255,255,255,0)) 
  height 50px
  width 100%
  
.txt-div 
  position absolute
  padding 0 20px
  z-index 1
  opacity 0.4
  max-width 400px  